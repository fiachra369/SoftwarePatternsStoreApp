<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productListParentCardView"
    style="@style/CardViewStyle"
    android:layout_height="200dp"
    android:layout_width="150dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/product_images_list_item_card_margin"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="@dimen/cart_activity_price_text_margin_end"
    card_view:elevation="@dimen/cart_empty_state_image_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/featuredProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:contentDescription="@string/content_description_product_image"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="4dp"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/featuredProductTitle"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/featuredProductPrice"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        </LinearLayout>


</androidx.cardview.widget.CardView>
