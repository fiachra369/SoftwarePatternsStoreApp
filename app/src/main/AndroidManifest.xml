<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="electric.ecomm.store">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.OrderAdminActivity"></activity>
        <activity
            android:name=".activities.OrderDetailsActivity"
            android:parentActivityName=".activities.UserOrdersActivity" />
        <activity
            android:name=".activities.OrderActivity"
            android:parentActivityName=".activities.CartActivity" />
        <activity android:name=".activities.ReviewActivity" />
        <activity android:name=".activities.AddProductActivity" />
        <activity
            android:name=".activities.AdminCategoryProductsActivity"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:parentActivityName=".activities.MainAdminActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".activities.AddCategoryActivity" />
        <activity
            android:name=".activities.MainAdminActivity"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:parentActivityName=".activities.RegisterActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.CategoryProductsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.ProductDetailsActivity"
            android:noHistory="true"
            android:parentActivityName=".activities.CategoryProductsActivity" />
        <activity
            android:name=".activities.CartActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.SearchableActivity"
            android:parentActivityName=".activities.CategoryProductsActivity" />
        <activity
            android:name=".activities.UserOrdersActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>